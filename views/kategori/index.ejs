<%- include('../partials/__head') %>
    <h3>Puasa harus sabar</h3>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <div class="container">
      <%- include('../partials/__message') %>
        <div class="row">
          <div class="col">
            <a href="/kategori/create" class="btn btn-sm btn-success">Tambah</a>
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Nama</th>
                  <th colspan="2" scope="col">Aksi</th>
                </tr>
              </thead>
              <tbody>
                <% for(var i=0; i<data.length; i++){  %>
                  <tr>
                    <th scope="row"><%= (i+1)%></th>
                    <td><%= data[i].nama_kategori %></td>
                    <td>
                      <a href="/kategori/edit/<%= data[i].id_kategori %>" class="btn btn-sm btn-warning">Edit</a>
                      <a href="/kategori/delete/<%= data[i].id_kategori %>" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
    </div>
<%- include('../partials/__foot') %>